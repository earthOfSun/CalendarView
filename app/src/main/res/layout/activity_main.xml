<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    android:orientation="vertical"
    tools:context="com.earthsun.calendarview.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffde00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffde00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffde00"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffde00"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@mipmap/gold_coin1" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold_coin1_line" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@mipmap/gold_coin1" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold_coin1_line" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@mipmap/gold_coin1" />

        <ImageView
            android:layout_width="31dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold_coin1_line" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@mipmap/gold_coin1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="连签3天"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="连签7天"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="连签15天"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="连签30天"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_below="@+id/calendar_view_sign"

        android:layout_gravity="center"
        android:layout_marginTop="74px"
        android:background="@drawable/btn_round_rectangle"
        android:text="签到" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/relative_shape"
        android:paddingBottom="15dp"
        android:paddingTop="15px">


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@mipmap/calendar"
            android:drawablePadding="10px"
            android:text="2018年5月"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="连续签到4天"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.earthsun.calendarview.calendarView.CalendarView
            android:id="@+id/calendar_view_sign"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/tv_date"
            android:layout_margin="10dp"
            android:background="@color/white"
            app:daySize="18sp"
            app:needOval="false"
            app:noSignFg="@color/black"
            app:onDayBitmap="@mipmap/sameday"
            app:signBitmap="@mipmap/day_signed"
            app:signFg="@color/red"
            app:weekBg="#f0f0f0"
            app:lineColor="@color/white"
            app:weekFg="@color/black"
            app:weekHeight="40dp"
            app:weekSize="15sp">

        </com.earthsun.calendarview.calendarView.CalendarView>
    </RelativeLayout>


</LinearLayout>
